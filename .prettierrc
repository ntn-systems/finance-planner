{
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSpacing": true,
    "printWidth": 80,
    "tabWidth": 4,
    "tailwindFunctions": ["clsx", "twMerge", "twJoin", "tw"],
    "arrowParens": "avoid",
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "pluginSearchDirs": ["."],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ],
    "htmlWhitespaceSensitivity": "ignore"
}
